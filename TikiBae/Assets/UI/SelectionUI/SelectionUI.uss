}

#no_Icon {

    left: 50%;
    top: 50%;
    translate: -50%;

    width:  56px;
    height: 56px;
    background-image: url("project://database/Assets/UI/Icons/Heart_Icon_broken.png");
}

#yes_Icon {

    left: 50%;
    top: 50%;
    translate: -50%;

    width:  56px;
