:root {
    --font-comic: url("project://database/Assets/UI/Fonts/Hey Comic SDF.asset");
}

.accept-invite-ui {
    position: absolute;
    width: 100%;
    height: 100%;
    align-items: center;
    justify-content: flex-end;
    padding-bottom: 40px;
}

.invite-container {
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: rgba(50, 50, 50, 0.9);
    border-radius: 16px;
    padding: 16px 24px;
    min-width: 250px;
}

.invite-text {
    font-size: 18px;
    -unity-font-definition: var(--font-comic);
    -unity-text-align: middle-center;
    color: white;
    margin-bottom: 12px;
}

.accept-button {
    background-color: #4CAF50;
    border-radius: 8px;
    padding: 10px 32px;
    font-size: 16px;
    -unity-font-definition: var(--font-comic);
    -unity-text-align: middle-center;
    color: white;
    border-width: 0;
}

.accept-button:hover {
    background-color: #45a049;
}

.accept-button:active {
    background-color: #3d8b40;
}
